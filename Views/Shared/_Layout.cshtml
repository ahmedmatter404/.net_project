<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspTask.styles.css" asp-append-version="true" />
    <style>
        /* Custom Styles for Sidebar */
        .sidebar {
            height: 100vh; /* Full height */
            position: fixed; /* Fixed position */
            top: 0;
            right: 0; /* Align to right */
            width: 250px; /* Set sidebar width */
            background-color: #f8f9fa; /* Light background */
            border-left: 1px solid #dee2e6; /* Border on the left */
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

            .sidebar .nav-link {
                color: #333;
            }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef;
                    color: #007bff;
                }

        .content {
            margin-right: 250px; /* Space for the sidebar */
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="sidebar navbar navbar-light">
            <div class="d-flex flex-column align-items-stretch">
                <a class="navbar-brand" asp-area="" asp-controller="Instructor" asp-action="start">AspTask</a>
                <ul class="navbar-nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instructor" asp-action="Index">Instructor Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instructor" asp-action="Create">Add Instructor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instructor" asp-action="std_Index">Student Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instructor" asp-action="CreateUser">Add user</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AspTask - <a asp-area="" asp-controller="Instructor" asp-action="start">AspTask</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
