@model ICollection<AspTask.Models.Instructor>

@* @{
    Layout = "~/Views/Shared/_layout.cshtml";
} *@    
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-M3PWQaY2QFIhwuzE7VW3K1dyA0C1coQemlJD1qDzWIxmg4zFMEu50eU/HiPzGmG4" crossorigin="anonymous">
</head>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                InsID
            </th>
            <th>
                Name
            </th>
            <th>
                InsDegree
            </th>
           
        </tr>

    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>
                    @instructor.InsId
                </td>
                <td>
                    @instructor.InsName
                </td>
                <td>
                    @instructor.InsDegree
                </td>

                <td>
                    <form action="/Instructor/details/@instructor.InsId" method="post">
                        <button type="submit" class="btn btn-primary">Details</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="Instructor" asp-action="edit" asp-route-id="@instructor.InsId" method="get">
                        <button type="submit" class="btn btn-warning">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="Instructor" asp-action="delete" asp-route-id="@instructor.InsId" method="get" onsubmit="return confirm('Are you sure you want to delete this instructor?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

                

            </tr>
        }

    </tbody>

</table>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

